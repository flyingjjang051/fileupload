<%- include("include/header"); %>
<main id="main">
  <div id="contents">
    <h2 class="title"><%= title %></h2>
    <form action="/register" method="POST" id="join" class="formBox">
      <div class="inputBox">
        <label>
          <span class="label">영화제목</span>
          <input type="text" id="movieTitle" name="movieTitle" placeholder="영화제목을 입력하세요" />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">개봉날짜</span>
          <input type="text" id="date" name="date" placeholder="개봉날짜" />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">장르</span>
          <input type="text" id="genre" name="genre" placeholder="장르을 입력하세요" />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">줄거리</span>
          <textarea name="desc" id="desc" cols="30" rows="10"></textarea>
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">평점</span>
          <input type="text" id="point" name="point" />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">포스터</span>
          <input type="file" name="poster" id="poster" />
        </label>
      </div>
      <div class="btns">
        <button type="submit" id="btnJoin">확인</button>
        <button type="reset">취소</button>
      </div>
    </form>
  </div>
</main>
<%- include("include/footer"); %>
